{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
    <!-- =======================
    Main Content START -->
    <section class="vh-xxl-100">
        <div class="container h-100 d-flex px-0 px-sm-4">
            <div class="row justify-content-center align-items-center m-auto">
                <div class="col-12">
                    <div class="bg-mode shadow rounded-3 overflow-hidden">
                        <div class="row g-0">
                            <!-- Vector Image -->
                            <div class="col-lg-6 d-flex align-items-center order-2 order-lg-1">
                                <div class="p-3 p-lg-5">
                                    <img src={{ asset('images/element/signin.svg')}} alt="">
                                </div>
                                <!-- Divider -->
                                <div class="vr opacity-1 d-none d-lg-block"></div>
                            </div>

                            <!-- Information -->
                            <div class="col-lg-6 order-1">
                                <div class="p-4 p-sm-7">
                                    <!-- Logo -->
                                    <a href="{{ path('app_index') }}">
                                        <img class="h-50px mb-4" src={{ asset('images/logo-icon.svg')}} alt="logo">
                                    </a>
                                    <!-- Title -->
                                    <h1 class="mb-2 h3">Mot de passe oublié</h1>
                                    <p class="mb-0">Un email va vous être envoyé</p>

                                    <!-- Form START -->
                                    <form method="post" class="mt-4 text-start">
                                        <!-- Email -->
                                        <div class="mb-3">
                                            <label for="inputEmail" class="form-label">Enter email id</label>
                                            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                        </div>
                                        <!-- Remember me -->
                                        <div class="mb-3 d-sm-flex justify-content-between">
                                            <a href="{{ path('app_login') }}">Revenir à connexion</a>
                                        </div>
                                        <!-- Button -->
                                        <div><button type="submit" class="btn btn-primary w-100 mb-0">Login</button></div>


                                    </form>
                                    <!-- Form END -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =======================
    Main Content END -->

    </main>
    <!-- **************** MAIN CONTENT END **************** -->
{% endblock %}
