{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>DateNaissance</th>
            <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ user.ville }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_profile_edit', {'id': user.id}) }}">edit</a>

{% endblock %}
